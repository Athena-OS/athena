package() {
  install -dm 755 "${pkgdir}/usr/share/athena-gnome-config"

  install -Dm 644 dconf-custom-keybindings.ini "${pkgdir}/usr/share/athena-gnome-config/dconf-custom-keybindings.ini"
  install -Dm 644 dconf-desktop.ini "${pkgdir}/usr/share/athena-gnome-config/dconf-desktop.ini"
  install -Dm 644 dconf-mutter.ini "${pkgdir}/usr/share/athena-gnome-config/dconf-mutter.ini"
  install -Dm 644 dconf-shell.ini "${pkgdir}/usr/share/athena-gnome-config/dconf-shell.ini"
