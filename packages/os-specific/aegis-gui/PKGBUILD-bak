pkgname=aegis-gui
pkgver=1.9.4
pkgrel=3
pkgdesc='Libadwaita based GUI front-end for Aegis.'
license=('GPL3')
arch=('x86_64' 'aarch64')
url="https://github.com/Athena-OS/${pkgname}"
depends=('aegis' 'openssl' 'libadwaita' 'python-pytz' 'gparted' 'vte4' 'gtksourceview5' 'python-tzlocal' 'python-requests')
makedepends=('cmake' 'meson' 'ninja' 'desktop-file-utils' 'appstream-glib' 'gtk4' 'pkg-config')
#source=("${url}/-/archive/v${pkgver}/${pkgname}-v${pkgver}.tar.gz")
source=("git+https://github.com/Athena-OS/$pkgname.git")
sha512sums=('SKIP')

build() {
    cd $pkgname

    meson --prefix="/usr" _build
    ninja -C _build
}

package() {
    cd $pkgname/_build

    DESTDIR=$pkgdir ninja install
}
