pkgname=aegis-gui-tauri
pkgver=86.283cb70
pkgrel=1
pkgdesc="Tauri-based GUI front-end for Aegis."
arch=('x86_64' 'aarch64')
url="https://github.com/Athena-OS/${pkgname}"
license=('GPL3')
depends=('gtk3' 'libappindicator-gtk3' 'libsoup' 'webkit2gtk')
makedepends=('cargo-tauri' 'yarn' 'git')
source=("git+https://github.com/mwaurawakati/$pkgname.git")
options=(!strip)
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
    cd $pkgname

    yarn install
    cargo tauri build -- --locked
}

package() {
    cd $pkgname

    install -Dm 755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
