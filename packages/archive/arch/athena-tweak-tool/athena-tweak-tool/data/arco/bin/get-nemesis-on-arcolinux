#tput setaf 0 = black 
#tput setaf 1 = red 
#tput setaf 2 = green
#tput setaf 3 = yellow 
#tput setaf 4 = dark blue 
#tput setaf 5 = purple
#tput setaf 6 = cyan 
#tput setaf 7 = gray 
#tput setaf 8 = light blue
##################################################################################################################

#iso=arcolinux

echo
tput setaf 3
echo "################################################################"
echo "################### Start clone arcolinux-nemesis"
echo "################################################################"
tput sgr0
echo

if test -f /usr/bin/git ; then
	echo "git is present"
	echo
else
	echo "We have installed git"
	sudo pacman -S git --noconfirm
fi

[ -d $HOME"/DATA" ] || mkdir -p $HOME"/DATA"
cd ~/DATA
git clone https://github.com/erikdubois/arcolinux-nemesis

echo "###############################################################################"
echo "###                DONE - YOU CAN CLOSE THIS WINDOW                        ####"
echo "###############################################################################"
