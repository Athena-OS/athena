#tput setaf 0 = black 
#tput setaf 1 = red 
#tput setaf 2 = green
#tput setaf 3 = yellow 
#tput setaf 4 = dark blue 
#tput setaf 5 = purple
#tput setaf 6 = cyan 
#tput setaf 7 = gray 
#tput setaf 8 = light blue
##################################################################################################################
echo "Changing logo"
if [ -f /usr/local/bin/get-nemesis-on-arcolinux ]; then
    sudo cp /usr/local/share/arcolinux/release/os-release-arco /usr/lib/os-release
    sudo cp /usr/local/share/arcolinux/release/os-release-arco /usr/lib/os-release-arcolinux
fi

if [ -f /usr/local/bin/get-nemesis-on-carli ]; then
    sudo cp /usr/local/share/arcolinux/release/os-release-arch /usr/lib/os-release
    sudo cp /usr/local/share/arcolinux/release/os-release-arch /usr/lib/os-release-arcolinux
fi

if [ -f /usr/local/bin/get-nemesis-on-aa ]; then
    sudo cp /usr/local/share/arcolinux/release/os-release-arch /usr/lib/os-release
    sudo cp /usr/local/share/arcolinux/release/os-release-arch /usr/lib/os-release-arcolinux
fi

if [ -f /usr/local/bin/get-nemesis-on-alci ]; then
    sudo cp /usr/local/share/arcolinux/release/os-release-arch /usr/lib/os-release
    sudo cp /usr/local/share/arcolinux/release/os-release-arch /usr/lib/os-release-arcolinux
fi