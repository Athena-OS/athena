echo "###############################################################################"
echo "Change to lightdm-slick-greeter"
echo "###############################################################################"

sudo sed -i "s/#greeter-session=example-gtk-gnome/greeter-session=lightdm-slick-greeter/g" /etc/lightdm/lightdm.conf

