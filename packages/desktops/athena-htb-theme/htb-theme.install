post_install() {
  echo "Setting Hack The Box theme"

  mv /etc/skel/.config/kitty/Box.conf /etc/skel/.config/kitty/current-theme.conf
  mv /usr/share/athena-htb-theme/apps/* /usr/share/icons/hicolor/scalable/apps/
  mv /usr/share/athena-htb-theme/categories/* /usr/share/icons/hicolor/scalable/categories/
  rm -rf /usr/share/athena-htb-theme
}

post_upgrade() {
    post_install $1
}
