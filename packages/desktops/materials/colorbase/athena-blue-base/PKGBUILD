pkgname=athena-blue-base
pkgver=1.0.0
pkgrel=1
pkgdesc="Blue colorbase resources."
arch=('any')
license=("GPL3")
source=("git+https://github.com/Athena-OS/athena-blue-base")
sha512sums=('SKIP')

package() {
  install -dm 755 "$pkgdir/usr/share/athena-blue-base"
  install -dm 755 "$pkgdir/usr/share/backgrounds/athena"

  install -Dm 644 "arch-ascii.png" "$pkgdir/usr/share/backgrounds/athena/"

  cp -a "$srcdir/icons/apps" "$pkgdir/usr/share/athena-blue-base/"
  cp -a "$srcdir/icons/categories" "$pkgdir/usr/share/athena-blue-base/"
}