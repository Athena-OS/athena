pkgname=athena-green-base
pkgver=5.a74e5d8
pkgrel=1
pkgdesc="Green colorbase resources."
arch=('any')
license=("GPL3")
makedepends=('git')
install='green.install'
source=("git+https://github.com/Athena-OS/athena-green-base")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd athena-green-base

  install -dm 755 "$pkgdir/usr/share/icons"
  install -dm 755 "$pkgdir/usr/share/themes"
  install -dm 755 "$pkgdir/usr/share/athena-green-base"
  install -dm 755 "$pkgdir/usr/share/backgrounds/athena"

  cp -a HackTheBox-GTK-Theme/HackTheBox-B "$pkgdir/usr/share/themes/"
  cp -a HackTheBox-GTK-Theme/HackTheBox-BL "$pkgdir/usr/share/themes/"
  cp -a HackTheBox-GTK-Theme/HackTheBox-BBL "$pkgdir/usr/share/themes/"
  cp -a HackTheBox "$pkgdir/usr/share/icons/"
  install -Dm 644 "hackthebox.png" "$pkgdir/usr/share/backgrounds/athena/"

  cp -a "icons/apps" "$pkgdir/usr/share/athena-green-base/"
  cp -a "icons/categories" "$pkgdir/usr/share/athena-green-base/"
}
