post_install() {
  echo "Setting Everblush theme"

  mv /etc/skel/.config/kitty/Atom.conf /etc/skel/.config/kitty/current-theme.conf
  mv /usr/share/athena-everblush-theme/apps/* /usr/share/icons/hicolor/scalable/apps/
  mv /usr/share/athena-everblush-theme/categories/* /usr/share/icons/hicolor/scalable/categories/
  rm -rf /usr/share/athena-everblush-theme
}

post_upgrade() {
    post_install $1
}
