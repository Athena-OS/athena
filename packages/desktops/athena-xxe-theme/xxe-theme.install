post_install() {
  echo "Setting XXE theme"

  mv /etc/skel/.config/kitty/gruvbox-dark.conf /etc/skel/.config/kitty/current-theme.conf
  mv /usr/share/athena-xxe-theme/apps/* /usr/share/icons/hicolor/scalable/apps/
  mv /usr/share/athena-xxe-theme/categories/* /usr/share/icons/hicolor/scalable/categories/
  rm -rf /usr/share/athena-xxe-theme
}

post_upgrade() {
    post_install $1
}
