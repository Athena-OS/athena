pkgname=athena-gnome-config
pkgver=2.5
pkgrel=4
pkgdesc="GNOME configuration for Athena."
arch=('any')
license=("custom")
depends=('athena-gnome-base' 'gnome-shell-extension-appindicator' 'gnome-shell-extension-arc-menu' 'gnome-shell-extension-desktop-icons-ng' 'gnome-shell-extension-kando-integration' 'gnome-shell-extension-top-bar-organizer' 'gnome-shell-extension-ubuntu-dock-git' 'gnome-shell-extension-vitals')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc"
  mkdir -m 750 -p "${pkgdir}/etc/sudoers.d"
  mkdir -p "${pkgdir}/usr/share/athena-gnome-config"

  cp -rf "${srcdir}"/usr/share/athena-gnome-config/* "${pkgdir}/usr/share/athena-gnome-config/"
}
sha512sums=('ce73b118ed46859f394d1375325d5e6dd465e1340a4c6c8bd0644d38ed7541dbc8d0040fa373f6851842461066841a540491bdb02c82b6c817465508e1ce8928')
