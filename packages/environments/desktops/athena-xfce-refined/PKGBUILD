pkgname=athena-xfce-refined
pkgver=1.0.4
pkgrel=1
pkgdesc="XFCE Refined configuration for Athena."
arch=('any')
license=("custom")
depends=('athena-xfce-base' 'nautilus')
source=("$pkgname.tar.gz")
sha512sums=('107102af701651c0af0ed5d80597518a241869cee6dc631827c68a1a937301ae5635681f061747d880c2d777e5a6d8795b664a5b6d44da805da04374860922ad')

package() {
  mkdir -p "${pkgdir}/etc/skel/.config"

  cp -rf "${srcdir}/xfce4" "${pkgdir}/etc/skel/.config/"
}
