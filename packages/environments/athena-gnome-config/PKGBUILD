pkgname=athena-gnome-config
pkgver=1.0.1
pkgrel=3
pkgdesc="GNOME configuration for Athena."
arch=('any')
license=("custom")
depends=('athena-gnome-base' 'gnome-shell-extension-appindicator-git' 'gnome-shell-extension-arc-menu-git' 'gnome-shell-extension-desktop-icons-ng-git' 'gnome-shell-extension-fly-pie-git' 'gnome-shell-extension-hide-activities-git' 'gnome-shell-extension-pop-shell-git' 'gnome-shell-extension-top-bar-organizer' 'gnome-shell-extension-ubuntu-dock-git' 'gnome-shell-extension-vitals-git')
conflicts=('athena-gnome-material-shell-config')
source=("$pkgname.tar.gz")
sha512sums=('fa0fd49c496f2f11d6ab9d191d4ea197be0dce7056a87eba6dfc3677b87f02ef358b8b4ef70abdbae7ff3cf099ba2e6ca6583f80039a26097b42ae7c1f463bac')

package() {
  mkdir -p "${pkgdir}/etc"
  mkdir -m 750 -p "${pkgdir}/etc/sudoers.d"
  mkdir -p "${pkgdir}/usr/share/athena-gnome-config"

  cp -rf "${srcdir}"/usr/share/athena-gnome-config/* "${pkgdir}/usr/share/athena-gnome-config/"
}
