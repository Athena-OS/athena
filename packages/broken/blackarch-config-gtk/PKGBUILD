pkgname=athena-config-gtk
pkgver=4.f9f6a21
pkgrel=3
pkgdesc='BlackArch config for gtk-2.0.'
arch=('any')
groups=('athena-config')
url='https://github.com/BlackArch/athena-config-gtk'
license=('custom')
depends=('feh' 'athena-wallpaper')
makedepends=('git')
source=('git+https://github.com/BlackArch/athena-config-gtk.git')
install='athena-config-gtk.install'
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/blackarch/config/gtk-2.0"

  cp -a * "$pkgdir/usr/share/blackarch/config/gtk-2.0"
}

