pkgname=python-ip2location
_pkgname=IP2Location
pkgver=8.10.0
pkgrel=1
pkgdesc='Python API for IP2Location database.'
arch=('any')
url='https://pypi.org/project/IP2Location/#files'
license=('MIT')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/$_pkgname/IP2Location-$pkgver.tar.gz")
sha512sums=('e154c5e543905360ed229760b13199a3ae391f52abfef7cbff2eec2a6180145c09a2b28b9c0e6e4fdc48b979e15cdfdf3bb6ef7628b01be30acab0c4b3518c1d')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package_python2-ip2location() {
  depends=('python2')


  python2 setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

package() {
  depends=('python')

  cd "$_pkgname-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir" -O1 --skip-build
}

