pkgname=python-bacpypes
_pkgname=${pkgname#python-}
pkgver=0.18.6
pkgrel=1
pkgdesc='Testing multiple versions of python.'
arch=('any')
url='https://github.com/JoelBender/bacpypes'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("https://github.com/JoelBender/bacpypes/archive/v$pkgver.tar.gz")
sha512sums=('26231bc60161f8c03b0b559c163f23ce5bd11db54f7d5d023693efcc147bc910e05a7bacdb4bfb4571a64e1e8807b3ff9b34216084519f3cfb749489b6bbb602')

build() {
  cd "$_pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$_pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build
}
