pkgname=python-pythreatgrid2
_pkgname=pythreatgrid2
pkgver=5.3521e34
pkgrel=5
pkgdesc='Python library to request crt.sh certificate information.'
arch=('any')
url='https://pypi.org/project/pythreatgrid2/#files'
license=('Apache-2.0')
makedepends=('git' 'python2-setuptools' 'python-setuptools')
source=("git+https://github.com/Te-k/$_pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $_pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}


build() {
  cd "$_pkgname-2"
  cd "$srcdir/$_pkgname"
  python setup.py build
}

package_python2-pythreatgrid2() {
  depends=('python2' 'python2-requests')

  cd "$_pkgname-2"

  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build

}

package() {
  depends=('python' 'python-requests')

  cd $_pkgname

  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 \
    --skip-build
}

