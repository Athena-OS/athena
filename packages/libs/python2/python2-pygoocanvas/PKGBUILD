pkgname=python2-pygoocanvas
_pkgname=${pkgname#python2-}
pkgver=0.14.1
pkgrel=2
pkgdesc='Python Bindings for goocanvas.'
arch=('x86_64' 'aarch64')
url='https://github.com/dieterv/pygoocanvas'
license=('GPL2')
depends=('python2' 'goocanvas' 'pygtk')
makedepends=('git' 'pkgconfig' 'gtk-doc')
source=("git+https://github.com/dieterv/$_pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cd $_pkgname

  ./autogen.sh
}

build() {
  cd $_pkgname

  ./configure --prefix=/usr --disable-docs
  make
}

package() {
  cd $_pkgname

  make DESTDIR="$pkgdir" install
}
